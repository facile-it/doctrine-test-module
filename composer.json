{
  "name": "facile-it/doctrine-test-module",
  "type": "library",
  "description": "Zend Framework module that provides features that help you run your Zend-framework-based App's testsuite more efficiently with isolated tests",
  "homepage": "https://github.com/facile-it/doctrine-test-module",
  "license": "MIT",
  "authors": [
    {
      "name": "Thomas Vargiu",
      "email": "thomas.vargiu@facile.it"
    }
  ],
  "keywords": [
    "zend",
    "zend framework",
    "doctrine",
    "phpunit"
  ],
  "extra": {
    "zf": {
      "component": "Facile\\DoctrineTestModule"
    }
  },
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": "^7.1",
    "container-interop/container-interop": "^1.2",
    "doctrine/doctrine-module": "^1.2",
    "doctrine/doctrine-orm-module": "^1.1",
    "psr/container": "^1.0",
    "zendframework/zend-servicemanager": "^3.0.3"
  },
  "require-dev": {
    "doctrine/dbal": "~2.5",
    "phpstan/phpstan": "^0.10.3",
    "phpstan/phpstan-phpunit": "^0.10.0",
    "phpunit/phpunit": "^6.0 || ^7.0"
  },
  "autoload": {
    "psr-4": {
      "Facile\\DoctrineTestModule\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Facile\\DoctrineTestModule\\": "tests/"
    }
  }
}
